@model CreateContactToAddressVM
@{
    Layout = "_Layout";
    ViewBag.Title = "Contact To Address Form";
}
<a asp-controller="Contacts" asp-action="Index">Back</a>

@if (Model.ContactItems != null && Model.AddressItems != null)
{
    <form asp-controller="Contacts" asp-action="ContactToAddressForm" method="post">
        <table>
            <tr>
                <td>
                    <label asp-for="ContactItems"></label>
                </td>
                <td>
                    <select asp-for="SelectedContactValue"
                            asp-items="Model.ContactItems"></select>
                    <span asp-validation-for="SelectedContactValue"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="AddressItems"></label>
                </td>
                <td>

                    <select asp-for="SelectedAddressValue"
                            asp-items="Model.AddressItems"></select>
                    <span asp-validation-for="SelectedAddressValue"></span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit">Create</button>
                </td>
            </tr>
        </table>
    </form>
}
